{
  "name": "YT download",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Simple user-script for downloading youtube videos",
  "homepage_url": "https://github.com/spawnius/YT-download",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "https://www.youtube.com/*",
    "http://youtu.be/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}